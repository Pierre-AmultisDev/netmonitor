# ============================================================================
# NetMonitor Environment Configuration
# ============================================================================
# Copy this file to .env and customize for your environment:
#   cp .env.example .env
#   nano .env
#
# SECURITY: NEVER commit .env to version control!
# ============================================================================

# ============================================================================
# INSTALLATION CONFIGURATION
# ============================================================================
# BELANGRIJK: Standaard installatie pad is /opt/netmonitor
# Als je hiervan afwijkt, ben je zelf verantwoordelijk voor het aanpassen
# van alle pad referenties in service files, nginx configs, etc.
INSTALL_DIR=/opt/netmonitor

# ============================================================================
# WEB DASHBOARD CONFIGURATION
# ============================================================================
# Dashboard toegankelijkheid
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8080

# Dashboard server type (embedded|gunicorn)
# embedded = Flask development server in netmonitor.py (simpel, 1 service)
# gunicorn = Production WSGI server (aanbevolen voor productie, 2 services)
DASHBOARD_SERVER=embedded

# Gunicorn workers (alleen voor DASHBOARD_SERVER=gunicorn)
DASHBOARD_WORKERS=4

# Flask secret key voor session security
# BELANGRIJK: Genereer een sterke key voor productie!
# Generate: python3 -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=change-this-to-a-random-secret-key-in-production

# ============================================================================
# MCP HTTP API CONFIGURATION (AI Integration)
# ============================================================================
# MCP HTTP API voor Claude Desktop en andere AI clients
# Zie: docs/features/MCP_HTTP_API.md
MCP_API_ENABLED=false
MCP_API_HOST=0.0.0.0
MCP_API_PORT=8000
MCP_API_WORKERS=4

# Reverse proxy support (bijv. nginx op /mcp/)
# Laat leeg als MCP API direct toegankelijk is (geen reverse proxy)
# Zet op /mcp als je nginx gebruikt met location /mcp/
MCP_ROOT_PATH=

# CORS configuratie voor MCP API
MCP_CORS_ORIGINS=*

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Database type (sqlite|postgresql)
# sqlite     = Standaard, geen extra setup nodig
# postgresql = Voor MCP HTTP API en grotere deployments
DB_TYPE=sqlite

# SQLite Database (standaard - gebruikt door monitoring engine en dashboard)
SQLITE_PATH=/var/lib/netmonitor/netmonitor.db

# PostgreSQL Database (optioneel - alleen voor MCP HTTP API)
# Configureer alleen als DB_TYPE=postgresql of MCP_API_ENABLED=true
DB_HOST=localhost
DB_PORT=5432
DB_NAME=netmonitor
DB_USER=netmonitor
DB_PASSWORD=netmonitor

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log directory en niveau
LOG_DIR=/var/log/netmonitor
LOG_LEVEL=INFO

# Log retention (dagen)
LOG_RETENTION_DAYS=30

# ============================================================================
# RUNTIME DIRECTORIES
# ============================================================================
# Runtime directories (PID files, sockets, etc.)
RUN_DIR=/var/run/netmonitor
DATA_DIR=/var/lib/netmonitor
CACHE_DIR=/var/cache/netmonitor

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
# Self-monitoring settings (SOC server zelf monitoren)
# Zie config.yaml voor volledige monitoring configuratie
SELF_MONITOR_ENABLED=true
SELF_MONITOR_INTERFACE=lo

# ============================================================================
# SENSOR CONFIGURATION (Remote Sensors)
# ============================================================================
# Alleen configureren voor REMOTE sensors (niet SOC server)
# Laat leeg als dit de SOC server is

# Sensor identificatie
SENSOR_ID=
SENSOR_NAME=
SENSOR_LOCATION=

# SOC Server connectie
SOC_SERVER_URL=
SENSOR_TOKEN=

# Sensor network interface
SENSOR_INTERFACE=eth0

# ============================================================================
# NGINX CONFIGURATION
# ============================================================================
# Nginx configuratie (voor template generation)
NGINX_SERVER_NAME=soc.poort.net
NGINX_SSL_CERT=/etc/ssl/certs/soc.crt
NGINX_SSL_KEY=/etc/ssl/private/soc.key

# ============================================================================
# THREAT INTELLIGENCE & INTEGRATIONS
# ============================================================================
# Threat feed update interval (seconden)
THREAT_FEED_UPDATE_INTERVAL=3600

# AbuseIPDB API Key (optioneel - voor IP reputation checks)
# Gratis tier: 1000 requests/dag
# Sign up: https://www.abuseipdb.com/api
ABUSEIPDB_API_KEY=

# MISP Threat Intelligence Platform (optioneel)
# Zie: docs/features/MISP_SETUP.md
MISP_URL=
MISP_API_KEY=

# AlienVault OTX (optioneel - gratis)
# Sign up: https://otx.alienvault.com
OTX_API_KEY=

# ============================================================================
# SIEM INTEGRATION
# ============================================================================
# Wazuh SIEM (optioneel)
# Zie: docs/features/WAZUH_SETUP.md
WAZUH_API_URL=
WAZUH_API_USER=
WAZUH_API_PASSWORD=

# Generic Syslog output (optioneel)
SYSLOG_HOST=
SYSLOG_PORT=514
SYSLOG_PROTOCOL=udp
SYSLOG_FORMAT=cef

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================
# Email notifications (optioneel)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
SMTP_TO=

# Slack notifications (optioneel)
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Session timeout (seconden)
SESSION_TIMEOUT=3600

# Maximum login attempts
MAX_LOGIN_ATTEMPTS=5

# Lockout duration (seconden)
LOCKOUT_DURATION=900

# 2FA enforcement
REQUIRE_2FA=false

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
# Database connection pool size
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=300

# WebSocket settings
WS_MAX_CONNECTIONS=100
WS_PING_INTERVAL=25

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# Debug mode (NEVER enable in production!)
DEBUG=false

# Development server (Flask werkzeug)
DEV_SERVER_RELOAD=false

# SQL Query logging
SQL_ECHO=false
